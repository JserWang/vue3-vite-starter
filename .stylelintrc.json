{
  "processors": [],
  "plugins": [],
  "extends": "stylelint-config-standard",
  "ignoreFiles": ["node_modules/**", "dist/**"],
  "rules": {
    "at-rule-no-unknown": [ 
      true, 
      {
        "ignoreAtRules": [
          "responsive",
          "tailwind"
        ]
      }
    ],
    "indentation": 2,
    "selector-pseudo-element-no-unknown": [
      true, 
      {
        "ignorePseudoElements": ["v-deep"]
      }
    ]
  }
}