{
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": true,
  },
  "typescript.format.semicolons": "remove",
  "editor.tabSize": 2,
  "editor.linkedEditing": true,
  "scss.lint.unknownAtRules": "ignore",
  "css.validate": true,
  "scss.validate": true,
  "volar.tsPlugin": true,
  "volar.tsPluginStatus": false,
  "git.ignoreLimitWarning": true
}